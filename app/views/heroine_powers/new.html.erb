<%if @heroine_power.errors %>
    <%@heroine_power.errors.full_messages.each do |message|%>
        <h1>ERROR: <%=message%></h1>
    <%end%>
<%end%>

<%=form_for @heroine_power do |f| %> 
    <%=f.label :strength %> <br>
    <%=f.text_field :strength %> <br>

    <%=f.label :select_heroine %> <br>
    <%=f.collection_select :heroine_id, Heroine.all, :id, :super_name %><br>

    <%=f.label :select_power %> <br>
    <%=f.collection_select :power_id, Power.all, :id, :name %><br>

    <%=f.submit %>
<% end %>