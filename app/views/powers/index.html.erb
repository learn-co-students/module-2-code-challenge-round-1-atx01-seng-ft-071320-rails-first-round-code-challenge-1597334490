<h2>All Superpowers</h2>

<ul>
  <% @powers.each do |power| %>
    <li>
      Power: <%= power.name %>
      <br>
      <br>
      Description: <%= power.description %>
      <br>
      <br>
      Heroines with this Power: <%= power.total_heroines%>
      <br>
      <% power.heroines.each do |a| %>
        <p><%= link_to a.super_name, heroine_path(a) %></p>
      <%end%>
    </li>
  <% end %>
</ul>
