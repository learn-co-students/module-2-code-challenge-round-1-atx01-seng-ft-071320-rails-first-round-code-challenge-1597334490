<h2>All Superpowers</h2>

<ul>
  <% @powers.each do |power| %>
    <li>
      <%= link_to power.name.capitalize, power_path(power) %>
      <br><br>
      Description: <%= power.description.capitalize %>
      <br><br>
      # of heroines with this power: <%= power.heroines.count %>
    </li>
  <% end %>
</ul>
